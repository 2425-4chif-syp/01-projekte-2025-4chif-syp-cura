{
  "id": "cura",
  "realm": "cura",
  "displayName": "CURA Medication System",
  "enabled": true,
  "sslRequired": "external",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": false,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "clients": [
    {
      "clientId": "cura-frontend",
      "name": "CURA Frontend Application",
      "enabled": true,
      "publicClient": true,
      "redirectUris": [
        "https://vm12.htl-leonding.ac.at/*",
        "http://localhost:4200/*"
      ],
      "webOrigins": [
        "https://vm12.htl-leonding.ac.at",
        "http://localhost:4200"
      ],
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": false,
      "protocol": "openid-connect",
      "attributes": {
        "post.logout.redirect.uris": "https://vm12.htl-leonding.ac.at/*##http://localhost:4200/*"
      }
    }
  ],
  "roles": {
    "realm": [
      {
        "name": "user",
        "description": "Standard user role"
      },
      {
        "name": "caregiver",
        "description": "Caregiver role for medical staff"
      },
      {
        "name": "patient",
        "description": "Patient role"
      }
    ]
  },
  "users": [
    {
      "username": "pali",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Pali",
      "lastName": "Test",
      "email": "pali@cura.local",
      "credentials": [
        {
          "type": "password",
          "value": "pali123",
          "temporary": false
        }
      ],
      "realmRoles": [
        "user",
        "patient"
      ]
    }
  ],
  "clientScopes": [
    {
      "name": "patient_id",
      "description": "Patient ID scope",
      "protocol": "openid-connect",
      "attributes": {
        "include.in.token.scope": "true",
        "display.on.consent.screen": "true"
      },
      "protocolMappers": [
        {
          "name": "patient-id-mapper",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "config": {
            "user.attribute": "patient_id",
            "claim.name": "patient_id",
            "jsonType.label": "int",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true"
          }
        }
      ]
    },
    {
      "name": "caregiver_id",
      "description": "Caregiver ID scope",
      "protocol": "openid-connect",
      "attributes": {
        "include.in.token.scope": "true",
        "display.on.consent.screen": "true"
      },
      "protocolMappers": [
        {
          "name": "caregiver-id-mapper",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "config": {
            "user.attribute": "caregiver_id",
            "claim.name": "caregiver_id",
            "jsonType.label": "int",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true"
          }
        }
      ]
    }
  ]
}
